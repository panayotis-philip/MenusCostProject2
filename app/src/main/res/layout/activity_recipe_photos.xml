<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_rest"
    tools:context=".Register">

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/logo2" />

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imgLogo"
        android:layout_alignBottom="@+id/imgLogo"
        android:layout_marginStart="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="25dp"
        android:layout_toStartOf="@+id/imgLogo"
        android:src="@drawable/back2" />

    <ImageView
        android:id="@+id/ImgHomePage"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/imgLogo"
        android:layout_alignBottom="@+id/imgLogo"
        android:layout_marginStart="40dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:layout_toEndOf="@+id/imgLogo"
        android:src="@mipmap/ic_home" />
    


    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imgLogo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:fontFamily="sans-serif"
        android:text="@string/menu_s_cost"
        android:textColor="@color/colorAccent"
        android:textColorHint="#FFFFFF"
        android:textColorLink="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtInfo"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp"
        android:text="Take a Photo of your menu!"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="18sp" />


    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:srcCompat="@drawable/photo_image"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/txtInfo"
        android:layout_marginTop="10dp"
        />

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ivPhoto"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="40dp"
        android:text="@string/see_the_photos"
        android:id="@+id/btnList"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:layout_below="@+id/ivPhoto"
        android:layout_marginTop="10dp"
        android:text="@string/take_photo"
        android:layout_marginStart="40dp"
        android:id="@+id/btnTake"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="60dp"
        android:text="@string/upload"
        android:layout_below="@+id/ivPhoto"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btnLoad"/>

    <TextView
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnLoad"
        android:layout_marginTop="5dp"
        android:id="@+id/tv_message"/>


</RelativeLayout>